<% if current_user.favorited_by?(chocolate['itemCode']) %>
<div class="like">
  <%= link_to  chocolate_favorites_path(chocolate_id: chocolate["itemCode"], params: {index: index} ), class: "fas fa-thumbs-up iine", id: "fas-#{index}", method: :delete, remote: true do %><% end %>
</div>
<div class="iine-count">
  いいねの数 <%= Favorite.where(item_code: chocolate["itemCode"]).count %>
</div>

<% else %>
<div class="like">
  <%= link_to chocolate_favorites_path(chocolate_id: chocolate["itemCode"], params: {index: index} ), class: "far fa-thumbs-up iine", id: "far-#{index}", method: :post, remote: true do %><% end %>
</div>
<div class="iine-count">
  いいねの数 <%= Favorite.where(item_code: chocolate["itemCode"]).count %>
</div>

<% end %>