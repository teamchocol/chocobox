<% pp chocolate %>
<% if current_user.favorited_by?(chocolate["itemCode"]) %>
					
  <%= link_to  favorites_path(chocolate), class: "glyphicon glyphicon-heart" ,method: :delete, remote: true do %>
    <%#= Favorite.where(item_code: chocolate["itemCode"]).count %> 
  <% end %>

<% else %>
  
    <%= link_to  favorites_path(chocolate),class: "glyphicon glyphicon-heart-empty", method: :post, remote: true do %>
    
      <%#= Favorite.where(item_code: chocolate["itemCode"]).count %> 
    <% end %>
  
<% end %>