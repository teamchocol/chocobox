<div class="container">
<div class="row">
	<div class="col-xs-12">
  <h2 class="follow-title">フォロー 一覧</h2>
	<table class="table">
		<thead>
			<tr>
				<th class="align-middle">image</th>
				<th class="align-middle">name</th>
				<th colspan="3"></th>
	    </tr>
		</thead>
   
		<tbody>
			<% @follows.following.each do |user| %>
			<tr>
				<td class="align-middle"><%= attachment_image_tag(user, :profile_image,  size:'100x100', fallback: "no_image.jpg", size:'100x100') %></td>
				<td class="align-middle"><%= user.nickname%></td>
				
				<td class="align-middle">	<% @user ||= current_user %>
					<a href="<%= following_user_path(@user) %>">
						<strong id="following" class="stat">
						  フォロー数
							<%= user.following.count %>
						</strong>
					</a>
				</td>
				<td class="align-middle">	
					<a href="<%= followers_user_path(user) %>">
						<strong id="followers" class="stat">
						  フォロワー数
							<%= user.followers.count %>
						</strong>
					</a>
				</td>	
        <td class="align-middle">
			  <% unless current_user.id == user.id %>
					<div id="follow_form">
					<% if current_user.following?(user) %>
					
					 <%= link_to "フォローを外す", unfollow_path(user.id), class: "btn btn-success", method: :post %> 
				
					<% else %>	
					
					 <%= link_to "フォローする", follow_path(user.id), class: "btn btn-block btn-default" ,method: :post %> 
					<% end %>	
					</div>
				<% end %>
				</td>
				<td class="align-middle"><%= link_to "プロフィール", user, class: "user_#{user.id}" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<!--users一覧 -->
	</div>
</div>
</div>