<div class="container">
<div class="row">
	<div class="col-xs-12">
  <h2 class="follower-title">フォロワー 一覧</h2>
	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th colspan="3"></th>
	    </tr>
		</thead>

		<tbody>
			<% @followers.followers.each do |user| %>
			<tr>
				<td class="align-middle">
				  <% if user.profile_image.attached? %>
						<%= image_tag user.profile_image.variant(resize:'100x100', format: 'jpeg', class: "img-circle pull-left profile-thumb") %>
					<% else %>
						<%= image_tag "no_image.jpg", size:'100x100'%>
					<% end %>
				</td>
				<td class="align-middle"><%= user.name %></td>
				
				<td class="align-middle">	<% @user ||= current_user %>
				<div class="stats">
					<a href="<%= following_user_path(@user) %>">
					フォロー数
						<strong id="following" class="stat">
							<%= user.following.count %>
						</strong>
					</a>
				</td>
				<td class="align-middle">	
					<a href="<%= followers_user_path(user) %>">
						フォロワー数
						<strong id="followers" class="stat">
							<%= user.followers.count %>
						</strong>
					</a>
				</div>
				</td>	
        <td class="align-middle">
			  <% unless current_user.id == user.id %>
					<div id="follow_form">
					<% if current_user.following?(user) %>
					
					 <%= link_to "unfollow", unfollow_path(user.id), class: "btn btn-block btn-default", method: :post %> 
				
					<% else %>	
					
					 <%= link_to "follow", follow_path(user.id), class: "btn btn-block btn-default" ,method: :post %> 
					<% end %>	
					</div>
				<% end %>
				</td>
				
			  <td class="align-middle"><%= link_to "プロフィールへ", user, class: "user_#{user.id}" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<!--users一覧 -->
	</div>
</div>
</div>