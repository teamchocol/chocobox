<h1>チョコサーチ</h1>
<div class='content'>
  <div id="search-box">
    <%= form_tag('search', method: :get) do %>
        <%= text_field_tag :chocolate, "",  id: "chocolate_id", name: "keyword", placeholder: "好きなチョコレートを入力してください", style: "width: 200px;"%><button title="検索" type="submit">検索</button>
    <% end %>
  </div>
  <h2>検索結果</h2>
  <div id='chocolate_list'>
    <% if @items.present? %>
      <% @items.each do |good| %>
      <% pp good %>
        <div class="list">
        <% if good.medium_image_urls[0] %>
          <%= link_to (image_tag(good.medium_image_urls[0], style: "width: 120px;height: 100px;display: inline-block;")) %>
        <%end%></br>

          <%= good.name %>

          ¥<%= good.price %>

          <% good.tag_ids[0] %>

          <%= link_to "商品に口コミを投稿する",chocolate_path(good.params["itemCode"]), class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>
    <div class="yubi">
      <div id="back"><%= image_tag "arrow.png", size:'50x50' %></div>
    </div>
  </div>
</div>
<%= paginate @items, class: "paginate" %>