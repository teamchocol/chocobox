<div class="container">
	<h3>商品一覧</h3>
	<div class="row">	
	<% @chocolates.each do |chocolate| %>
		<div class="rakuten_ranking  col-xs-3 col-md-3">
			<div>
				<%= image_tag(chocolate.medium_image_urls[0], style: "width: 230px;height: 200px;display: inline-block;") %>
			</div>
			<div><%= chocolate.name %></div>
			<div class="choco_price">¥<%= chocolate.price %></div>
			<div>
				<% if chocolate["itemCode"].present? %>
				<%= link_to 'この商品に口コミを投稿する', chocolate_path(chocolate["itemCode"]), class: "btn btn-default" %>
				<% else %>
				<%= link_to 'この商品に口コミを投稿する', home_sorry_path, class: "btn btn-default" %>
				<% end %>
			</div>
			
			<div id="<%= "like-link-#{chocolate["itemCode"].delete(":")}" %>">
					<%= render 'favorites/index', chocolate: chocolate %>
			</div>
			<div>
				いいねの数 <%= Favorite.where(item_code: chocolate["itemCode"]).count %>個
			</div>
		</div>	
		<% end %>
	</div>

	<div>
		<%= form_tag(ranking_chocolates_path,method:"get") do %>
		<%= select_tag 'range', options_for_select([["売れ筋ランキング 1~30位","1"], ["売れ筋ランキング 31~60位","2"], ["売れ筋ランキング 61~90位","3"], ["売れ筋ランキング 91~120位","4"]],:selected=>"1") %>
		<%= submit_tag "検索" %>
		<% end %>
	</div>

	<div class="yubi">
		<div id="back"><%= image_tag "arrow.png", size:'50x50' %></div>
	</div>
</div>