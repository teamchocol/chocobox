<div class="container ranking">
	<div class="row">
	<% if (chocolate.total_taste && chocolate.total_healthy && chocolate.total_cost_performance).nil? %>
	  <div class="blank"></div>
	<% else %>
		<div class="kutikomi-ranking col-xs-12 col-md-12 col-sm-12">
			<div class="row">
			  <div class="col-xs-12 col-md-12 col-sm-12">
			    <div class="sougou">
					  <p> 口コミ総合評価 </p>
					</div>
			<div class="row">
				<div class="heikin col-xs-3 col-sm-3 col-md-3">	  
					<div>
						<h3 class="average ave">おいしさ平均値</h3>
					</div>
					<div>
						<h3 class="average ave">健康度平均値</h3>
					</div>
					<div>
						<h3 class="average ave">コスパ平均値</h3>
					</div>
				</div>

				<div class="heikin col-xs-2 col-sm-2 col-md-2">
					<div class="average value">
						<h3><%= chocolate.total_taste %>点</h3>
					</div>
					<div class="average">
						<h3><%= chocolate.total_healthy %>点</h3>
					</div>
					<div class="average">
						<h3><%= chocolate.total_cost_performance %>点</h3>
					</div>
				</div>

				<div class=" comment-chart col-xs-7 col-sm-7 col-md-7">
					<div class="sougou">
						<canvas height="200px" id="myChart" class="myChart_comment"></canvas>
					  <script>
							var ctx = document.getElementById("myChart");
							var myChart = new Chart(ctx, {
								type: 'radar',
								data: {
									labels: ["おいしさ", "コストパフォーマンス","健康"],
									datasets: [{
										label: '項目別評価',
										backgroundColor: "rgba(115,78,48,0.8)",
										borderColor: "rgba(7b,4b,29,1)",
                    data: [<%= chocolate.total_taste %>, <%= chocolate.total_cost_performance %>, <%= chocolate.total_healthy %> ]
									}]
								},
								options: {
									responsive: true,
									scale: {
										ticks: {
											max: 5,
											min: 0
										}
									}
								}
							});
						</script>
					</div>
				</div>
			</div>
			</div>
		</div>
		</div>
    <div class="comment-count">
      <a class="comment-count"><span id="comment_count"> <%= chocolate.comments.count %></span>件コメント</a>
    </div>	
	</div>
	<% end %>
</div>

<div class="container kutikomi">
  <div id="div1" class="row comment-field">
  <% if chocolate.comments.nil? %>
    <div class="blank"></div>>
  <% else %>
  <% comments = chocolate.comments.page(params[:page]).per(5) %> 
    <% comments.each do |comment| %>
    <div class="kutikomi col-xs-12 col-md-12 col-sm-12">
      <div class="row comment-avatar">
        <div class="comment-user col-xs-3 col-sm-3 col-md-3">
          <div class="">
            <%= attachment_image_tag(comment.user, :profile_image,size:'100x100', format: 'jpeg', fallback: "no_image.jpg", size:'100x100') %>
          </div>
          <div class="comment-author">
            <%= link_to(comment.user) do %>
            <div class="user-name"><%= comment.user.name %></div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 arrow_box">
          <div class="">
            <div class="date">
              <span class="comment-date"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
            </div>
            <div class="hyouka">
              <h6>総合評価：<%= ((comment.taste + comment.healthy + comment.cost_performance)/3).round(1) %>点</h6>
            </div>
            <a class="text">タイトル</a>
            <div>
              <a class="title"><%= comment.title %></a>
            </div>
            <a class="text">内容</a>
            <div class="comment">
              <%= comment.content %>
            </div>
            <div class="comment-image">
              <% if comment.image.attached? %>
               <%= image_tag comment.image.variant(crop: "#{session[:crop_width]}x#{session[:crop_height]}+#{session[:crop_x]}+#{session[:crop_y]}"),size:'200x200' %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-xs-5 col-sm-5 col-md-5">
          <div>
            <canvas width="50px" id="myChart-<%= comment.id %>" class="chart-child"></canvas>
            <script>
							var ctx = document.getElementById("myChart-<%= comment.id %>");
				
              var chart = new Chart(ctx, {
                type: 'radar',
                data: {
                  labels: ["おいしさ", "コストパフォーマンス", "健康"],
                  datasets: [{
                    label: '項目別評価',
                    backgroundColor: "rgba(0,255,0,0.4)",
                    borderColor: "rgba(0,255,0,1)",
                    data: [<%= comment.taste %>, <%= comment.cost_performance %>, <%= comment.healthy %>]
                  }]
                },
                options: {
                  responsive: true,
                  scale: {
                    ticks: {
                      max: 5,
                      min: 0
                    }
                  }
                }
              });
              $('#myChart-<%= comment.id %> *').removeAttr('style');
            </script>
          </div>
        </div>
        <div class=" comment-delete col-xs-1 col-sm-1 col-md-1">
          <% unless current_user != comment.user %>
          <div class="delete"><%= link_to comment_path(comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, remote: true  do %> <button
              class="btn btn-danger">コメントを削除</button>
            <% end %>
          </div>       
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
    <div class="page">
      <% if chocolate.comments.present? %>
      <%= paginate comments, class: "paginate" %>
      <%end %> 
   </div>
  </div>
  <% end %>
</div>


