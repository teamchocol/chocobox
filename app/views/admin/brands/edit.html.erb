<%= render 'admin/admin_header' %>
<div class="col-md-8 col-md-offset-2">
  <body>
    <h1>ブランド編集画面</h1>

    <%= form_for(@brand,url: admin_brand_path(@brand) ) do |f| %>
        <h4>ブランド</h4>
        <%= f.text_field :name %>
        <%= f.radio_button :status, '有効' %>有効
        <%= f.radio_button :status, '無効' %>無効
        <%= f.attachment_field :brand_image  %>
        <%= f.submit '更新を保存する' , class: "btn btn-primary"%>
    <% end %>
  </body>
</div>