<div class="container">
<div class="row">
	<div class="col-xs-12">
		<h2>Results index</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

      <tbody>
      
				<% @comment.each do |comment| %>
				<tr>
					<td>
						<%= link_to(comment.user) do %>
						<%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to comment.title, comment, class: "comment_#{comment.id}" %></td>
					<td><%= comment.title %></td>
          </tr>
          <% end %>
      </tbody>
		</table>
	</div>
</div>
</div>