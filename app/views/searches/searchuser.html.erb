<div class="container">
<div class="row">
	<div class="col-xs-12">
		<h2>Results index</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

      <tbody>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
         
          <tbody>
            <% @user.each do |user| %>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
              <td><%= user.nickname%></td>
              <td><%= user.name%></td>
              <td><%= link_to "プロフィールへ", user, class: "user_#{user.id}" %></td>
            </tr>
            <% end %>
          </tbody>
		</table>
	</div>
</div>
</div>