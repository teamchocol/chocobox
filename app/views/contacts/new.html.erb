<h1> お問い合わせ</h1>

<%= form_for @contact do |f| %>

  <div class="row">
    <%= f.label :name, 'お名前 ', class:'col-md-3 col-form-label'%>
    <div class=col-md-9>
      <%= f.text_field :name, class: "form-control" %></div>
  </div>
 
  <div class="row">
    <%= f.label :email, 'メールアドレス ', class:'col-md-3 col-form-label' %>
    <div class=col-md-9>
      <%= f.text_field :email, class: "form-control" %></div>
  </div>
 
  <div class="row">
    <%= f.label :title, 'タイトル ', class:'col-md-3 col-form-label' %>
    <div class=col-md-9>
      <%= f.text_field :title, class: "form-control" %></div>
  </div>    
  
  <div class="row">
    <%= f.label :content, 'お問い合わせ内容 ', class:'col-md-3 col-form-label' %>
    <div class=col-md-9>
      <%= f.text_area :content, class: "form-control", rows: "8" %></div>
  </div>

  <div class="row">
    <div class=col-md-9>
      <%= f.submit '送信する', class: 'btn btn-success'%></div>
  </div>
<% end %>
